<h1 class="text-teal-400 m-4">New User</h1>

<%= form_for @changeset, Routes.user_path(@conn, :create), fn f -> %>
    <div class="m-4">
        <%= text_input f, :name, placeholder: "Name", class: "border-2 border-teal-400 p-2"%>
    </div>
    <div class="m-4">
        <%= text_input f, :username, placeholder: "Username", class: "border-2 border-teal-400 p-2"%>
    </div>
    <%= submit "Create User", class: "mx-4 p-4 bg-teal-400 text-teal-50 border hover:bg-teal-700"%>
<% end %>
