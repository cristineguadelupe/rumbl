<h1 class="text-teal-900 w-full text-2xl">Watching:
    <span class="text-teal-700 font-light text-xl"> <%= @video.title %></span>
</h1>
<hr class="my-2 border-gray-300 w-full">

    <div class="flex flex-wrap">
        <div class="mr-4">
            <%= content_tag :div, id: "video",
            data: [id: @video.id, player_id: player_id(@video)] do %>
            <% end %>
        </div>

        <div class="w-2/5">
            <h3 class="text-teal-700 text-lg pb-2">Annotations:</h3>

            <div class="py-2 text-teal-900" id="msg-container">
            </div>

            <div class="mx-auto">
                <textarea id="msg-input" class="p-2 mb-2 border border-teal-700 shadow-xs" rows="3" name="message" placeholder="My annotation..."></textarea>
                <br>
                <button id="msg-submit" class="bg-cool-gray-50 hover:bg-gray-50 hover:text-teal-600 hover:border-teal-500 hover:shadow-outline-teal text-teal-800 font-semibold py-2 px-4 border border-teal-700 rounded shadow-sm" type="submit">
                    Save annotation
                </button>
            </div>

        </div>
    </div>

    <div class="my-4 ml-1"​>
        <h3 class="mb-2 text-teal-700 font-light text-md">Watching now:</h3>
        <div class="flex justify-start">
            ​<ul id="user-list"​>
            </ul>
            <ul id="device-list"​ class="mt-1 flex justify-center">
            </ul>
        <div>
    ​</div>

    <%# <div class="p-4">
        <h3 class="text-teal-700 text-lg py-2">Annotations:</h3>

